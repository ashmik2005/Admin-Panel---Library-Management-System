<%- include('partials/header') %>
    <!-- Content Header (Page header) --> 

    <style> 
       .image-thumbnail { 
         height: 80px; 
         width: 80px;
       }
    </style>

    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">List Category</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">List Category</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">  
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                  <div class="card-header">
                    <h3 class="card-title">List Category</h3>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body"> 
                    <table id="tbl-list-book" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                          <th>Cover Image</th>
                          <th>Category</th>
                          <th>Name</th> 
                          <th>Amount</th> 
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                        </thead>
                       <tbody> 
                         <% books.forEach((data) => { %> 
                          <tr> 
                            <td> 
                              <img class="image-thumbnail" src="<%= data.cover_image %>" alt="">
                            </td> 
                            <td> 
                              <%= data.Category.name %>
                            </td> 
                            <td><%= data.name %></td> 
                            <td><%= data.amount %></td> 
                            <td><%
                              if(data.status == '1'){  
                                %>  
                                <button class="btn btn-success">Active</button>
                                <%
                              }else { 
                                %>  
                                <button class="btn btn-danger">Inactive</button>
                                <%
                              }                         
                               %></td> 
                            <td> 
                              <a href="/admin/edit-book/<%= data.id %>" class="btn btn-info"><i class="fa fa-edit"></i></a> 
                              
                              <form method="post" action="/admin/delete-book/<%= data.id %>" id="frm-delete-book-<%= data.id %>"> 
                                <input type="hidden" value="<%= data.id %>" name="book_id">
                              </form>
                              
                              <a href="javascript:void(0)" onclick="if(confirm('Are you sure you want to delete?')){  $('#frm-delete-book-<%= data.id %>').submit() }" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                          </tr>
                         <% }) %>
                       </tbody>
                        <tfoot>
                        <tr>
                          <th>Cover Image</th>
                          <th>Category</th>
                          <th>Name</th>
                          <th>Amount</th> 
                          <th>Status</th> 
                          <th>Action</th>
                        </tr>
                        </tfoot>
                      </table>
                   
                  </div>
                </div>
              </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
 
  <!-- /.content-wrapper --> 
  <%- include('partials/footer') %>
  